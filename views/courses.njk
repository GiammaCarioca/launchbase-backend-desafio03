{% extends "layout.njk" %}

{% block head %}
<title>Conteúdos Rocketseat</title>
{% endblock %}

{% block content %}
<h1>Conteúdos</h1>
  <main class="courses-grid">
    {% for course in courses %}
      <div class="card course" data-course="{{course.urn}}">
        <h2><img src="{{course.img}}" alt="{{course.title}}" class="logo-img"/></h2>
        <div class="course-info">
          <p>{{course.duration}}</p>
          <p>{{course.price}}</p>
        </div>
      </div>
    {% endfor %}
  </main>

  <div class="modal-overlay">
    <div class="modal">
      <iframe src=""></iframe> 
      <button id="close-modal">Fechar</button>
      <button id="maximize-modal"><img src="expand-solid.svg" alt="maximize" style="transform:scale(1.5)"></button>
    </div>
  </div>  		

	<script src="scripts.js"></script>
{% endblock %}
