{% extends "layout.njk" %}

{% block head %}
<title>Conteúdos Rocketseat</title>
{% endblock %}

{% block content %}

<h1>Conteúdos</h1>
  <main class="courses-grid">
    {% for course in courses %}
      <div class="card course" id={{course.id}} data-course="{{course.urn}}">
        <h2>
          <img src="{{course.img}}" alt="{{course.title}}" class="logo-img"/>
        </h2>
        <div class="course-info">
          <p>{{course.duration}}</p>
          <p>{{course.price}}</p>
        </div>
      </div>
    {% endfor %}
  </main>

{% endblock %}

{% block js %}
<script src="/scripts.js"></script>
{% endblock %}
