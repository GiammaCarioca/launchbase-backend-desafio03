{% extends "layout.njk" %}

{% block head %}
<title>Sobre Rocketseat</title>
{% endblock %}

{% block content %}
<div class="wrapper">
	<div class="rocketseat">
		<div class="frame-logo">
			<!-- <img src="assets/logo-rocketseat.svg" alt="Rocketseat"
					class="logo-img" style="transform:scale(2.5)" /> -->
			<lottie-player
				src="https://assets10.lottiefiles.com/private_files/lf30_9klG1Z.json"
				background="#fad800"
				speed="1"
				style="width: 360px; height: 360px;"
				autoplay
				loop
			>
			</lottie-player>
		</div>
		<h1>{{about.name}}</h1>
	</div>
	<h2>{{about.shortDescription}}</h2>
	<p>{{about.longDescription}}</p>
	<section class="techs">
		<h3>As principais tecnologias utilizadas</h3>
		<ul>
		{% for tech in about.techs %}
			<li>
				<figure>
					<img src="{{tech.image_url}}" alt="{{tech.name}}" />
					<figcaption>{{tech.name}}</figcaption>
				</figure>
			</li>
		{% endfor %}
		</ul>
	</section>
</div>

<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
{% endblock %}
